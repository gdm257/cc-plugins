{
  "$schema": "https://anthropic.com/claude-code/marketplace.schema.json",
  "name": "cc-257",
  "description": "Directory of popular Claude Code extensions including development tools, productivity plugins, and MCP integrations",
  "owner": {
    "name": "gdm257",
    "email": "gdm@disroot.org"
  },
  "plugins": [
    {
      "name": "php-lsp-bunx",
      "description": "PHP language server (Intelephense) for code intelligence",
      "version": "1.0.0",
      "author": {
        "name": "gdm257",
        "email": "gdm@disroot.org"
      },
      "source": "./plugins/php-lsp",
      "category": "development",
      "strict": false,
      "lspServers": {
        "intelephense": {
          "command": "bunx",
          "args": ["intelephense", "--stdio"],
          "extensionToLanguage": {
            ".php": "php"
          }
        }
      }
    },
    {
      "name": "php-lsp-npx",
      "description": "PHP language server (Intelephense) for code intelligence",
      "version": "1.0.0",
      "author": {
        "name": "gdm257",
        "email": "gdm@disroot.org"
      },
      "source": "./plugins/php-lsp",
      "category": "development",
      "strict": false,
      "lspServers": {
        "intelephense": {
          "command": "npx",
          "args": ["intelephense", "--stdio"],
          "extensionToLanguage": {
            ".php": "php"
          }
        }
      }
    },
    {
      "name": "pyright-lsp-uvx",
      "description": "Python language server (Pyright) for type checking and code intelligence",
      "version": "1.0.0",
      "author": {
        "name": "gdm257",
        "email": "gdm@disroot.org"
      },
      "source": "./plugins/pyright-lsp",
      "category": "development",
      "strict": false,
      "lspServers": {
        "pyright": {
          "command": "uvx",
          "args": ["pyright-langserver", "--stdio"],
          "extensionToLanguage": {
            ".py": "python",
            ".pyi": "python"
          }
        }
      }
    },
    {
      "name": "pyright-lsp-pipx",
      "description": "Python language server (Pyright) for type checking and code intelligence",
      "version": "1.0.0",
